{
	"manifest_version": 2,
	"name": "Fake StackOverflow redirect",
	"version": "1.0.0",
	"description": "Redirect fake websites translating StackOverflow questions like QAStack to the real official website",
	"icons": {
		"48": "icon.svg",
		"96": "icon.svg"
	},
	"content_scripts": [
		{
			"matches": [
				"*://qastack.fr/*/*/*",
				"*://qastack.ru/*/*/*",
				"*://qastack.mx/*/*/*",
				"*://qastack.cn/*/*/*",
				"*://qastack.com.br/*/*/*",
				"*://qastack.it/*/*/*",
				"*://qastack.vn/*/*/*",
				"*://qastack.com.de/*/*/*",
				"*://qa-stack.pl/*/*/*",
				"*://qastack.in.th/*/*/*",
				"*://qastack.info.tr/*/*/*",
				"*://qastack.co.in/*/*/*",
				"*://qastack.jp/*/*/*",
				"*://qastack.id/*/*/*",
				"*://qastack.com.ua/*/*/*",
				"*://qastack.kr/*/*/*",
				"*://qastack.net.bd/*/*/*",
				"*://qastack.lk/*/*/*"
			],
			"js": ["main.js"]
		}
	],
	"browser_specific_settings": {
		"gecko": {
			"id": "fake-stackoverflow-redirect@yolopix.net"
		}
	}
}
